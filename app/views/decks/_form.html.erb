<%= form_with(model: deck, local: true, multipart: true) do |form| %>
  <% if deck.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(deck.errors.count, "error") %> prohibited this deck from being saved:</h2>

      <ul>
      <% deck.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= label_tag(:name, "Deck Name") %>
    <%= text_field_tag(:name, "", class: "form-control") %>
  </div>

  <%= label_tag "Wins" %>
  <br>

  <div class="form-group col-lg-12">
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="radio" name="deck[match_wins]" id="inlineCheckbox0" value="0">
      <label class="form-check-label" for="inlineCheckbox0">0</label>
    </div>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="radio" name="deck[match_wins]" id="inlineCheckbox1" value="1">
      <label class="form-check-label" for="inlineCheckbox1">1</label>
    </div>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="radio" name="deck[match_wins]" id="inlineCheckbox2" value="2">
      <label class="form-check-label" for="inlineCheckbox2">2</label>
    </div>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="radio" name="deck[match_wins]" id="inlineCheckbox3" value="3">
      <label class="form-check-label" for="inlineCheckbox3">3</label>
    </div>
  </div>


  <div class="form-group">
    <%= label_tag :file, "Deck CSV" %>
    <%= file_field_tag :file, { class: "form-control-file" } %>
  </div>


  <div class="actions">
    <%= form.submit("Upload Deck", class: "btn btn-primary") %>
  </div>
<% end %>
